---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Pricing">
	<section class="space-y-4">
		<h1 class="text-2xl font-semibold tracking-tight text-white">Pricing</h1>
		<p class="text-slate-300">Placeholder page.</p>

		<div class="grid gap-4 md:grid-cols-3">
			<div class="rounded-lg border border-white/10 bg-slate-900/40 p-4 backdrop-blur">
				<h2 class="font-medium text-white">Starter</h2>
				<p class="mt-1 text-sm text-slate-300">For small lead lists.</p>
				<p class="mt-4 text-sm text-slate-400">Price: (placeholder)</p>
			</div>
			<div class="rounded-lg border border-white/10 bg-slate-900/40 p-4 backdrop-blur">
				<h2 class="font-medium text-white">Pro</h2>
				<p class="mt-1 text-sm text-slate-300">For teams running campaigns.</p>
				<p class="mt-4 text-sm text-slate-400">Price: (placeholder)</p>
			</div>
			<div class="rounded-lg border border-white/10 bg-slate-900/40 p-4 backdrop-blur">
				<h2 class="font-medium text-white">Enterprise</h2>
				<p class="mt-1 text-sm text-slate-300">Custom volume and workflows.</p>
				<p class="mt-4 text-sm text-slate-400">Price: (placeholder)</p>
			</div>
		</div>
	</section>
</Layout>
