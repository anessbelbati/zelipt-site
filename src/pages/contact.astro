---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact">
	<section class="space-y-6">
		<header class="space-y-2">
			<h1 class="text-3xl font-semibold tracking-tight text-slate-50">Contact</h1>
			<p class="max-w-2xl text-slate-300">Email is the fastest way to reach us.</p>
		</header>

		<div class="rounded-lg border border-slate-800 bg-slate-900 p-5">
			<p class="text-sm text-slate-300">
				Email:
				<a
					class="font-medium text-slate-50 underline underline-offset-4"
					href="mailto:hello@zelipt.com"
				>
					hello@zelipt.com
				</a>
			</p>
			<p class="mt-2 text-sm text-slate-500">(Form integration can go here later.)</p>
		</div>
	</section>
</Layout>
